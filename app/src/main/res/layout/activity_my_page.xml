<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00bfbf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/cancel"
            android:src="@drawable/x_icon"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/peo5"
            android:layout_width="126dp"
            android:layout_height="140dp" />
        <TextView
            android:id="@+id/useremailText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundb"
            android:textColor="#ffffff"
            android:textSize="24.7sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:paddingHorizontal="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/writeImage"
            android:src="@drawable/write_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/letsgowrite"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/writeImage"
            android:fontFamily="@font/nanumsquareroundb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:text="글쓰기"
            />
        <View
            android:layout_marginTop="25dp"
            android:layout_below="@+id/writeImage"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="13dp"
        android:paddingHorizontal="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/listImage"
            android:src="@drawable/list_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/myListButton"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/listImage"
            android:fontFamily="@font/nanumsquareroundb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:text="내가 쓴 글"
            />
        <View
            android:layout_marginTop="25dp"
            android:layout_below="@+id/listImage"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/SignOutButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/chatting_background_yellow"
                android:fontFamily="@font/nanumsquareroundeb"
                android:paddingVertical="13dp"
                android:text="LOGOUT"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.008" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>